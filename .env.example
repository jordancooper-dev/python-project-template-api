# Application Settings
APP_NAME=my-project
DEBUG=false
LOG_LEVEL=INFO

# Database Configuration
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/myproject
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# API Key Settings
API_KEY_HEADER=X-API-Key
API_KEY_MIN_LENGTH=32

# CORS Settings (comma-separated origins, empty for no CORS)
# Use '["*"]' for development, '["https://yourdomain.com"]' for production
CORS_ORIGINS=[]

# Request Size Limits
MAX_REQUEST_SIZE=10485760  # 10MB in bytes

# Database Timeouts
DATABASE_POOL_TIMEOUT=30  # Connection pool timeout in seconds
DATABASE_STATEMENT_TIMEOUT=30000  # Statement timeout in milliseconds
